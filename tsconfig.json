{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2015",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "es-src",
        "baseUrl": ".",
        "jsx": "react",
        "jsxFactory": "elements.createElement",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noEmitOnError": true,
        "strictNullChecks": true,
    },
    "include": [
        "src/**/*"
    ]
}
